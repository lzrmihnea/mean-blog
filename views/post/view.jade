
extends ../layout

block content
    ul
        li
            h2
                a(href='/') #{post.title}
            p #{post.body}
            h5
                span #{post.created.toGMTString()}
                span  &#09 | &#09
                span by #{post.author._id}
                if isLoggedIn
                    span &#09 | &#09
                    span
                        a(href='/post/edit/#{post.id}') Edit
                    span  &#09 | &#09
                    span
                        a(href='/post/remove/#{post.id}') Remove
                    span  &#09 | &#09
                    span
                        form(method='post', action="/post/comment/"+post.id)
                            textarea(name='commentText')
                            input(type='submit', value='Comment')
                each comment in comments
                    li
                        p #{comment.author}: #{comment.text}
