extends layout

block content
    form(method='post', action='/register', enctype='application/x-www-form-urlencoded')
        h3 Sign up
        if exists
        .error
            | That user exists. Are you trying to &#09
            a(href="/login") Login
            | ?
        if invalid
        .error Please enter a valid email address and password.
        ul
            p
                input#email(name='email', placeholder='Email')
            p
                input#pass(type='password', name='pass', placeholder='Password')
            p
                input(type='submit', value='Sign up')